@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <div class="filters-container">
        <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-control">
            <option value="">All</option>
        </select>

        <div>
            <input type="text" asp-for="SearchString" class="form-control" />
            <input type="submit" value="Filter" class="button"/>
        </div>
    </div>
</form>
<div class="movies-container">
    @foreach (var item in Model.Movies)
        {
            <div class="card">
                <img src="~/Images/@item.ImageURL" class="card-img-top"/>
                <div class="card-body">
                    <h5 class="card-title">
                        @Html.DisplayFor(modelItem => item.Title)
                    </h5>
                    <ul>
                        <li>
                            Released: @Html.DisplayFor(modelItem => item.ReleaseDate)
                        </li>
                        <li>
                            Genre: @Html.DisplayFor(modelItem => item.Genre)
                        </li>
                        <li>
                            Price: @Html.DisplayFor(modelItem => item.Price)
                        </li>
                        <li>
                            Rating: @Html.DisplayFor(modelItem => item.Rating)
                        </li>
                    </ul>
                </div>
                <div class="card-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        }
</div>
